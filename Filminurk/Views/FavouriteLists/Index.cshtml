@model IEnumerable<Filminurk.Models.FavouriteLists.FavouriteListsIndexViewModel>

@{
	int rownumber = 1;
	int currentrow = 1;
	int currenttile = 1;
	int tilesInRow = 1;
}
<div>
	<a asp-action="CreateList" asp-controller="FavouriteLists" class="btn btn-primary">Tee uus lemmikute nimekiri</a>
	<a asp-action="Index" asp-controller="Home" class="btn btn-primary">Pealeht</a>
</div>
<div@*no class currently, no design*@>
	<form method="form">
		<table class="table">
			<thead>
				@if(Model.Any())
				{
					<tr>
						<th scope="col" colspan="2">
							<span>Kahjuks ei leidnud ühtegi lemmikute nimekirja</span>
						</th>
					</tr>
				}
				else
				{
					<tr>
						<th scope="col" colspan="2">
							<span>Sinu nimekirjad:</span>
						</th>
					</tr>
				}
			</thead>
			<tbody>
				@if (!Model.Any())
				{
					<table>
						<tr>
							<td colspan="2">Sorry, no list</td>
						</tr>
						<tr>
							<td><img width="128" src="~/lib/defaultassets/image/Nimetu.png"></td>
						</tr>
					</table>
				}
				else
				{
					@foreach(var list in Model)
					{
						<table>
							<tr>
								<td colspan="2">
									<a asp-action="ListDetailsListOwner" asp-controller="FavouriteLists" asp-route-id="@list.FavouriteListID">@list.ListName</a>
								</td>
							</tr>
							<tr>
								<td>
									@foreach(var image in list.Image)
									{
										<partial name="_ImageIndex" model="image" />
									}
								</td>
								<td>@list.ListDescription</td>
							</tr>
						</table>

					}
					rownumber++;
				}
			</tbody>
		</table>
	</form>
</div>