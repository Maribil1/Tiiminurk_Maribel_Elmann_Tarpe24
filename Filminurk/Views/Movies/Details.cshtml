@model Filminurk.Models.Movies.MoviesDetailsViewModel

<h1>Filmi info</h1>

<div>
	<h4>Filmi info</h4>
	<hr />
	<dl class="row">
		<div class="form-group row">
			<label asp-for="ID" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.ID)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Title" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Title)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Description)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.FirstPublished)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Director)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Actors" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Actors)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.CurrentRating)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Profit" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Profit)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="Awards" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.Awards)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="AwardsDescription" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.AwardsDescription)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="EntryCreatedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.EntryCreatedAt)
		</div>
	</dl>
	<dl class="row">
		<div class="form-group row">
			<label asp-for="EntryModifiedAt" class="col-sm-2 col-form-label"></label>
			@Html.DisplayFor(Model => Model.EntryModifiedAt)
		</div>
	</dl>
	<dl>
		@foreach(var images in Model.Images)
		{
			<partial name="_Images" model="images" />
		}
	</dl>
	<hr />

	<a asp-action="Index" asp-controller="Movies" class="btn btn-danger">Back</a>
</div>