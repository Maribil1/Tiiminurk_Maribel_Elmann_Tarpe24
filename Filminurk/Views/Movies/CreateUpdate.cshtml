@model Filminurk.Models.Movies.MoviesCreateUpdateViewModel


@if (Model.ID.HasValue)
{
	<h1>Muuda Film</h1>
}
else
{
	<h1>Lisa Film</h1>
}



<div>
	<form method="post" enctype="multipart/form-data">
		<input asp-for="ID" type="hidden" />
		<input asp-for="EntryCreatedAt" type="hidden" />
		<input asp-for="EntryModifiedAt" type="hidden" />

		<div class="form-group row">
			<label asp-for="Title" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10"> 
				<input asp-for="Title" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Description" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Description" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="FirstPublished" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="FirstPublished" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Director" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Director" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="CurrentRating" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="CurrentRating" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Profit" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Profit" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Awards" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="Awards" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="AwardsDescription" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="AwardsDescription" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="EntryCreatedAt" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="EntryCreatedAt" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="EntryModifiedAt" class="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input asp-for="EntryModifiedAt" class="form-control" />
			</div>
		</div>
		<div class="form-group row">
			<label asp-for="Files" classs="col-sm-2 col-form-label"></label>
			<div class="col-sm-10">
				<input class="form-control" asp-for="Files" multiple type="file" />
			</div>
		</div>
		@foreach(var images in Model.Images)
		{
			<partial name="_Images" model="images" />
			<input asp-action="removeImage" asp-controller="Movies" asp-route-ImageID="@images.ImageID" type="submit" 
			class="btn btn-success" value="Eemalda see pilt"/>
		}
		<div>
			@if (Model.ID.HasValue)
			{
				<input asp-action="Update" asp-controller="Movies" type="submit" class="btn btn-primary" value="Update" />
			}
			else
			{
				<input asp-action="Create" asp-controller="Movies" type="submit" class="btn btn-primary" value="Create" />
			}
			<a asp-action="Index" asp-controller="Movies" class="btn btn-sucess">Back</a>
		</div>
	</form>
</div>
